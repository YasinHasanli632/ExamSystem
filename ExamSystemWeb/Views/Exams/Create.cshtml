@model ExamCreateViewModel

<div class="card shadow-sm border-0">
    <div class="card-body">

        <form asp-action="Create" method="post">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <h6 class="mb-0">Yeni imtahan əlavə et</h6>

                <div>
                    <button type="submit" class="btn btn-success me-2">
                        💾 Yadda saxla
                    </button>

                    <a asp-action="Index" class="btn btn-secondary">
                        ↩ Geri
                    </a>
                </div>
            </div>

            <hr />

            <div class="row g-3">

                <!-- ŞAGİRD -->
                <div class="col-md-6">
                    <label class="form-label">Şagird</label>
                    <select asp-for="StudentId"
                            asp-items="Model.Students"
                            class="form-select"
                            id="studentSelect">
                        <option value="">— Şagird seçin —</option>
                    </select>
                    <span asp-validation-for="StudentId" class="text-danger"></span>
                </div>

                <!-- FƏNN -->
                <div class="mb-3">
                    <label asp-for="SubjectId" class="form-label">Fənn</label>

                    <select asp-for="SubjectId"
                            class="form-select"
                            id="subjectSelect">
                        <option value="">— Əvvəl şagird seçin —</option>
                    </select>

                    <span asp-validation-for="SubjectId" class="text-danger"></span>
                </div>


                <!-- İMTAHAN TARİXİ -->
                <div class="col-md-6">
                    <label class="form-label">İmtahan tarixi</label>
                    <input asp-for="ExamDate"
                           type="date"
                           class="form-control" />
                    <span asp-validation-for="ExamDate" class="text-danger"></span>
                </div>

                <!-- QİYMƏT -->
                <div class="col-md-6">
                    <label class="form-label">Qiymət (1–9)</label>
                    <input asp-for="Score"
                           type="number"
                           min="1"
                           max="9"
                           class="form-control" />
                    <span asp-validation-for="Score" class="text-danger"></span>
                </div>

            </div>

        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        const studentSelect = document.getElementById('studentSelect');
        const subjectSelect = document.getElementById('subjectSelect');

        studentSelect.addEventListener('change', function () {

            const studentId = this.value;

            // Şagird seçilməyibsə
            if (!studentId) {
                subjectSelect.innerHTML =
                    '<option value="">— Əvvəl şagird seçin —</option>';
                subjectSelect.disabled = true;
                return;
            }

            // Loading vəziyyəti
            subjectSelect.disabled = true;
            subjectSelect.innerHTML =
                '<option value="">⏳ Fənnlər yüklənir...</option>';

            fetch(`/Exams/GetSubjectsByStudent?studentId=${studentId}`)
                .then(res => res.json())
                .then(data => {

                    subjectSelect.innerHTML = '';

                    // Əgər fənn yoxdursa
                    if (data.length === 0) {
                        subjectSelect.innerHTML =
                            '<option value="">— Bu şagird üçün fənn tapılmadı —</option>';
                        subjectSelect.disabled = true;
                        return;
                    }

                    // Fənnlər varsa
                    subjectSelect.innerHTML =
                        '<option value="">— Fənn seçin —</option>';

                    data.forEach(s => {
                        const opt = document.createElement('option');
                        opt.value = s.id;
                        opt.textContent = s.name;
                        subjectSelect.appendChild(opt);
                    });

                    subjectSelect.disabled = false;
                });
        });

        // Page load-da fənn disable olsun
        subjectSelect.disabled = true;
    </script>
}

