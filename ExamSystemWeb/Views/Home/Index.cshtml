@{
    ViewData["Title"] = "Dashboard";
}

<div class="row g-4">

    <!-- ================= CARD: Students ================= -->
    <div class="col-md-4">
        <div class="card shadow-sm border-0">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-muted mb-1">Şagirdlər</h6>
                    <h3 class="mb-0">📊</h3>
                </div>
                <div>
                    <i class="fa fa-user-graduate fa-3x text-primary"></i>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0">
                <a asp-controller="Students"
                   asp-action="Index"
                   class="text-decoration-none">
                    Siyahıya bax →
                </a>
            </div>
        </div>
    </div>

    <!-- ================= CARD: Subjects ================= -->
    <div class="col-md-4">
        <div class="card shadow-sm border-0">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-muted mb-1">Fənlər</h6>
                    <h3 class="mb-0">📚</h3>
                </div>
                <div>
                    <i class="fa fa-book fa-3x text-success"></i>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0">
                <a asp-controller="Subjects"
                   asp-action="Index"
                   class="text-decoration-none">
                    Siyahıya bax →
                </a>
            </div>
        </div>
    </div>

    <!-- ================= CARD: Exams ================= -->
    <div class="col-md-4">
        <div class="card shadow-sm border-0">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-muted mb-1">İmtahanlar</h6>
                    <h3 class="mb-0">📝</h3>
                </div>
                <div>
                    <i class="fa fa-clipboard-list fa-3x text-warning"></i>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0">
                <a asp-controller="Exams"
                   asp-action="Index"
                   class="text-decoration-none">
                    Siyahıya bax →
                </a>
            </div>
        </div>
    </div>

</div>

<hr class="my-4" />

<!-- ================= WELCOME TEXT ================= -->
<div class="text-center text-muted">
    <h5>Exam Management System</h5>
    <p>
        Sol menyudan bölmə seçərək sistemi idarə edə bilərsiniz.
    </p>
</div>
