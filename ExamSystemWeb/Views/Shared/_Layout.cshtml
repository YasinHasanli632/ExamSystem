<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="utf-8" />
    <title>ExamSystem | Admin Panel</title>
    <link rel="icon" type="image/png" href="~/admin/images/logom.png" />

    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- CSS -->
    <link rel="stylesheet" href="~/admin/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/admin/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/admin/css/style.css" />

    @RenderSection("Styles", required: false)
</head>

<body>
    <div class="d-flex min-vh-100">

        <aside class="bg-dark text-white p-3" style="width:260px">
            <h4 class="mb-4 fw-bold">📘 ExamSystem</h4>

            <ul class="nav nav-pills flex-column gap-2">

                <li class="nav-item">
                    <a class="nav-link text-white"
                       asp-controller="Home"
                       asp-action="Index">
                        🏠 Dashboard
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-white"
                       asp-controller="Students"
                       asp-action="Index">
                        👨‍🎓 Şagirdlər
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-white"
                       asp-controller="Subjects"
                       asp-action="Index">
                        📚 Fənlər
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-white"
                       asp-controller="Exams"
                       asp-action="Index">
                        📝 İmtahanlar
                    </a>
                </li>

            </ul>
        </aside>

        <main class="flex-fill bg-light">

            <header class="bg-white border-bottom px-4 py-3 d-flex justify-content-between align-items-center">
                <span class="fw-bold">Admin Panel</span>
                <span class="text-muted">Exam Management System</span>
            </header>

            <div class="container-fluid py-4">

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-warning alert-dismissible fade show m-3" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button"
                                class="btn-close"
                                data-bs-dismiss="alert"
                                aria-label="Close">
                        </button>
                    </div>
                }

                @RenderBody()
            </div>

        </main>

    </div>

    <!-- JS -->
    <script src="~/admin/js/vendor/jquery-3.6.0.min.js"></script>
    <script src="~/admin/js/vendor/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
